<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/PADDING_30"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/PADDING_30"
        android:onClick="backToSplash"
        app:srcCompat="@drawable/ic_back_scalable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/PADDING_30"
            android:layout_marginTop="@dimen/PADDING_30"
            android:fontFamily="@font/bluelight"
            android:gravity="center"
            android:text="@string/VALOR_USER_PROFILE"
            android:textAlignment="textStart"
            android:textSize="90sp" />

        <ImageView
            android:id="@+id/imgUserProfile"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="@dimen/PADDING_30"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars[4]" />
    </LinearLayout>

    <TextView
        android:id="@+id/etxProfileNombre"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="@dimen/PADDING_30"
        android:layout_marginTop="@dimen/PADDING_30"
        android:layout_marginRight="@dimen/PADDING_30"
        android:text="TextView" />

    <EditText
        android:id="@+id/etxProfileDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/PADDING_30"
        android:layout_marginRight="@dimen/PADDING_30"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/etxProfileUsuario"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="@dimen/PADDING_30"
        android:layout_marginRight="@dimen/PADDING_30"
        android:text="TextView" />

    <Button
        android:id="@+id/btnErrorRegresar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/PADDING_30"
        android:layout_marginRight="@dimen/PADDING_30"
        android:layout_marginBottom="@dimen/PADDING_30"
        android:layout_weight="2"
        android:background="@color/colorPrimaryDark"
        android:onClick="seleccionarFoto"
        android:text="@string/VAL_BACK"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

</LinearLayout>