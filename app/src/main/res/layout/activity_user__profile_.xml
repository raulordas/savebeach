<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/PADDING_30">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/PADDING_30"
            android:layout_marginTop="@dimen/PADDING_30"
            android:fontFamily="@font/bluelight"
            android:gravity="center"
            android:text="@string/VALOR_USER_PROFILE"
            android:textAlignment="textStart"
            android:textSize="90sp" />

        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="@dimen/PADDING_30"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/hombre" />

        <ImageView
            android:id="@+id/btnEditFoto"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:contentDescription="TODO"
            app:srcCompat="@android:drawable/arrow_up_float" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="127dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/bambino_light"
            android:gravity="center"
            android:text="Nombre"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvFechaNc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/bambino_light"
            android:gravity="center"
            android:text="Fecha Nacimiento"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Email:"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvEmailReal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/bambino_light"
                android:text="juan.notario20@gmail.com"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="@font/bambino_light"
            android:text="mmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmm"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnEditDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:scrollbars="vertical"
            android:text="Editar Perfil" />

    </LinearLayout>

</RelativeLayout>